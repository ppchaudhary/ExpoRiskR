Package: ExpoRiskR
Type: Package
Title: Exposure-Aware Multi-Omics Risk Modeling
Version: 0.99.0
Authors@R: c(
    person("Prem Prashant", "Chaudhary",
           email = "chaudharyp2@nih.gov",
           role = c("aut", "cre"),
           comment = c(ORCID = "0000-0002-3467-8608"))
